create table TOPIC (
	TOPIC_ID SERIAL primary key,
	TITLE TEXT not null,
	DATE_TOPIC DATE not null,
	USER_ID INTEGER not null,
	TOTAL_VALUE NUMERIC not null,
	STATUS text not null,
	QUOTES numeric,
	CONSTRAINT FK_TOPIC_USER_COMMERCE FOREIGN KEY (USER_ID) REFERENCES USER_COMMERCE  (USER_ID)
);

create table PUCHARSE_LIST (
	LIST_ID SERIAL primary key,
	TOPIC_ID INTEGER not null,
	NAME TEXT not null,
	DATE_TOPIC DATE not null,
	TOTAL_VALUE NUMERIC not null,
	CONSTRAINT FK_PUCHARSE_LIST_TOPIC FOREIGN KEY (TOPIC_ID) REFERENCES TOPIC  (TOPIC_ID)
);

create table ANNEX (
	ANNEX_ID SERIAL primary key,
	LIST_ID INTEGER not null,
	TITLE text not null,
	CONSTRAINT FK_ANNEX_PUCHARSE_LIST FOREIGN KEY (LIST_ID) REFERENCES PUCHARSE_LIST (LIST_ID)
);